<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DecentralizedSecureChat" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/nord0</item>
        <item name="colorPrimaryVariant">@color/nord3</item>
        <item name="colorOnPrimary">@color/nord4</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/nord8</item>
        <item name="colorSecondaryVariant">@color/nord10</item>
        <item name="colorOnSecondary">@color/nord4</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="fontFamily">@font/hyperlegible</item>
        <item name="colorAccent">@color/nord14</item>
        <item name="colorError">@color/nord12</item>
    </style>
</resources>